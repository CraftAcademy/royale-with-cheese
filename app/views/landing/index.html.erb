
<h1>Royale with Cheese</h1>
<p>Movie suggestions</p>

<%= form_tag(search_path) do %>
  <%= text_field_tag :genre %>
  <%= submit_tag 'search' %>
<% end %>

<% if @movies %>
  <% if @movies.results.any? %>
    <h2> Results </h2>
      <ul>
        <% @movies.results.take(5).each do |movie| %>
        <li>
          <img src="http://image.tmdb.org/t/p/w185<%=movie.poster_path %>" alt="" >
          <b> <%= movie.title %> </b> <br>
            <p> <%= movie.overview %> </p>
        </li>
        <% end %>
      </ul>
  <% end %>
<% end %>

<%= form_tag charges_path do %>
  <article>
    <label class="amount">
      <span>Amount: 10 sek</span>
    </label>
  </article>
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
          data-key="<%=ENV['PUBLISHABLE_KEY'] %>"
          data-description="Donate to us!"
          data-amount="1000"
          data-locale="auto"></script>
<% end %>
